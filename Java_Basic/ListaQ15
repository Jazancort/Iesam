package aulaexercicio;
import java.util.Scanner;


public class NewClass {
    
    public static void main(String[] args){
       
        Scanner sc = new Scanner(System.in);
        double n1, n2, n3, n4;
        double resultado;
        
        System.out.print("Digite o 1ยบ numero: ");
        n1 = sc.nextDouble();
        System.out.print("Digite o 2ยบ numero: ");
        n2 = sc.nextDouble();
        System.out.print("Digite o 3ยบ numero: ");
        n3 = sc.nextDouble();
        System.out.print("Digite o 4ยบ numero: ");
        n4 = sc.nextDouble();
        
        resultado = (n1*1 + n2*2 + n3*3 + n4*4)/(1+2+3+4);
        
        System.out.print("Media ponderada:" + resultado);
       
    }
    
    
}
